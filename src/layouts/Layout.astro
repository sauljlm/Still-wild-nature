---
import KeepScrolling from "@/assets/keep-scrolling.svg"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Still wild nature</title>
  </head>
  <body>
    <slot />
    <KeepScrolling
      class="fixed bottom-3 right-0 left-0 mx-auto text-white z-2 drop-shadow-2xl animate-bounce-pulse"
    />
  </body>
</html>

<style is:global>
  @import "tailwindcss";

  @theme {
    --animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
  }

  @keyframes bounce-pulse {
    0% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }

    50% {
      transform: translateY(-5px);
      opacity: 1;
      scale: 1;
    }

    100% {
      transform: translateY(0);
      scale: 0.8;
      opacity: 0.8;
    }
  }

  html,
  body {
    background: #111;
    min-height: 300vh;
    overflow-x: hidden;
    overscroll-behavior-y: auto;
    color: white;
    margin: 0;
    width: 100%;
  }
</style>
